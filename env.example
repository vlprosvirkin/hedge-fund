# Hedge Fund MVP Environment Configuration

# ===== AI Provider Configuration =====
# AI Provider Selection: openai, gemini
AI_PROVIDER=openai

# ===== API Keys =====
# Binance API (for market data)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Aspis API (for trading execution)
ASPIS_API_KEY=your_aspis_api_key_here
ASPIS_VAULT_ADDRESS=your_aspis_vault_address_here

# OpenAI API (for LLM agents)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API (for LLM agents)
GEMINI_API_KEY=your_gemini_api_key_here

# CoinMarketCap API (for market sentiment data)
CMC_API_KEY=your_cmc_api_key_here

# News API
NEWS_API_KEY=your_news_api_key_here

# ===== AI Model Configuration =====
# OpenAI Model Selection (auto-selected by NODE_ENV, can be overridden)
# Options: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-4, gpt-3.5-turbo
OPENAI_MODEL=gpt-4o-mini

# Gemini Model Selection (auto-selected by NODE_ENV, can be overridden)
# Options: gemini-1.5-pro, gemini-1.5-flash, gemini-1.0-pro
GEMINI_MODEL=gemini-1.5-flash

# ===== System Configuration =====
# Environment: development, test, production (affects AI model selection)
NODE_ENV=development

# Safety settings
KILL_SWITCH_ENABLED=true

# ===== Database Configuration =====
# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hedge_fund
DB_USER=postgres
DB_PASSWORD=your_db_password_here
DB_SSL=false

# ===== Logging & Monitoring =====
LOG_LEVEL=info
LOG_FILE=logs/hedge-fund.log
METRICS_PORT=9090

# ===== External Services =====
# Telegram (for alerts)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

