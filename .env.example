# Hedge Fund MVP Environment Configuration

# ===== API Keys =====
# Binance API (for market data)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Aspis API (for trading execution)
ASPIS_API_KEY=your_aspis_api_key_here
ASPIS_SECRET_KEY=your_aspis_secret_key_here

# OpenAI API (for LLM agents)
OPENAI_API_KEY=your_openai_api_key_here

# ===== System Configuration =====
# Risk profile: averse, neutral, bold
RISK_PROFILE=neutral

# Trading intervals (in seconds)
DEBATE_INTERVAL=3600
REBALANCE_INTERVAL=3600

# Portfolio settings
MAX_POSITIONS=8

# Safety settings
KILL_SWITCH_ENABLED=true
MOCK_MODE=false

# ===== Database Configuration =====
# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hedge_fund
DB_USER=postgres
DB_PASSWORD=your_db_password_here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===== Logging & Monitoring =====
LOG_LEVEL=info
LOG_FILE=logs/hedge-fund.log
METRICS_PORT=9090

# ===== External Services =====
# News API (optional)
NEWS_API_KEY=your_news_api_key_here

# Telegram (for alerts)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ===== Development =====
NODE_ENV=development
DEBUG=false

GEMINI_API_KEY=api_key